rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user has admin privileges
    function isAdmin() {
      return request.auth != null && (
             request.auth.token.email == "wqu@monmouth.edu" ||
             get(/databases/$(database)/documents/users/$(request.auth.token.email.split("@")[0])).data.admin == true
      );
    }

    match /users/{studentId}{
      // Allow all authenticated students to read profiles (needed for admin search)
      allow read: if request.auth != null;
      // Users can update their own profile (slug must match email); Admins can update anyone
      allow write: if request.auth != null && (request.auth.token.email.split("@")[0] == studentId || isAdmin());
    }

    match /events/{eventId}{
      allow read: if true;
      allow write: if isAdmin();
    }

    match /leaders/{leaderId}{
      allow read: if true;
      // Users can update their own profile fields (username, fullName, address); attendance fields are written by the Admin SDK
      allow update: if request.auth != null
                    && request.auth.token.email.split("@")[0] == leaderId
                    && request.resource.data.diff(resource.data).affectedKeys().hasOnly(["username", "fullName", "address"]);
      // Allow users to create their own leader doc if it doesn't exist yet
      allow create: if request.auth != null
                    && request.auth.token.email.split("@")[0] == leaderId
                    && request.resource.data.keys().hasOnly(["username", "fullName", "address", "eventsAttended"])
                    && request.resource.data.eventsAttended == 0;
    }

    match /userDatas/{uid}{
      allow read: if request.auth != null && request.auth.uid == uid;
      allow write: if false;
    }
  }
}