rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user has admin privileges
    function isAdmin() {
      return request.auth != null && (
             request.auth.token.email == "wqu@monmouth.edu" ||
             get(/databases/$(database)/documents/users/$(request.auth.token.email.split("@")[0])).data.admin == true
      );
    }

    match /users/{studentId}{
      // Allow all authenticated students to read profiles (needed for admin search)
      allow read: if request.auth != null;
      // Users can update their own profile (slug must match email); Admins can update anyone
      allow write: if request.auth != null && (request.auth.token.email.split("@")[0] == studentId || isAdmin());
    }

    match /events/{eventId}{
      allow read: if true;
      allow write: if isAdmin();
    }

    match /leaders/{leaderId}{
      allow read: if true;
      // Attendance is handled by the Node.js API (Admin SDK), so clients should never write here.
      allow write: if false;
    }
    
		// deprecated
    match /numbers/{number}{
      // Only allow users to see/manage their own phone mappings (if still in use)
      allow read, write: if request.auth != null && request.auth.uid == resource.data.uid;
    }
  }
}